{
  "manifest_version": 3,
  "name": "CowPilot - The Better Co-Pilot",
  "version": "1.0.0",
  "description": "Your friendly AI co-pilot that sees your screen and helps you out",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "sidePanel"
  ],
  "host_permissions": [
    "https://openrouter.ai/*",
    "<all_urls>"
  ],
  "action": {
    "default_title": "CowPilot - Click to open",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "settings.html"
}

